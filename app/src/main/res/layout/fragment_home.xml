<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bglogin"
    tools:context=".HomeActivity">


   <TextView
       android:id="@+id/ezcell"
       android:layout_width="195dp"
       android:layout_height="92dp"
       android:layout_alignParentStart="true"
       android:layout_alignParentEnd="true"
       android:layout_marginStart="120dp"
       android:layout_marginTop="55dp"
       android:layout_marginEnd="100dp"
       android:fontFamily="@font/mitrregular"
       android:text="EzCell"
       android:textAlignment="center"
       android:textColor="@color/white"
       android:textSize="65sp" />

   <ImageView
       android:id="@+id/blood"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_below="@+id/ezcell"
       android:layout_alignParentStart="true"
       android:layout_marginStart="45dp"
       android:layout_marginTop="43dp"
       android:layout_marginBottom="200dp"
       android:src="@drawable/darah" />

   <TextView
       android:id="@+id/tv_blood"
       android:layout_width="125dp"
       android:layout_height="wrap_content"
       android:layout_alignParentEnd="true"
       android:layout_marginLeft="230dp"
       android:layout_marginTop="180dp"
       android:layout_marginEnd="35dp"
       android:layout_marginRight="5dp"
       android:layout_marginBottom="200dp"
       android:fontFamily="@font/poppinslight"
       android:text="Gunakan menu kamera untuk mengetahui  erythrocytes, leukocytes, dan Platelets"
       android:textAlignment="textStart"
       android:textColor="@color/white"
       android:textSize="14sp" />

   <ImageView
       android:id="@+id/hasil_scan"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignParentEnd="true"
       android:layout_marginStart="250dp"
       android:layout_marginTop="330dp"
       android:layout_marginEnd="45dp"
       android:src="@drawable/hasilscan" />

   <TextView
       android:id="@+id/tv_hasilscan"
       android:layout_width="125dp"
       android:layout_height="wrap_content"
       android:layout_alignParentStart="true"
       android:layout_marginStart="85dp"
       android:layout_marginTop="350dp"
       android:layout_marginRight="5dp"
       android:fontFamily="@font/poppinslight"
       android:text="Tunggu sejenak untuk melihat hasil scan"
       android:textAlignment="textStart"
       android:textColor="@color/white"
       android:textSize="14sp" />

   <ImageView
       android:id="@+id/pdf"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignParentStart="true"
       android:layout_marginStart="45dp"
       android:layout_marginTop="500dp"
       android:layout_marginBottom="20dp"
       android:src="@drawable/pdf" />

   <TextView
       android:id="@+id/tv_pdf"
       android:layout_width="125dp"
       android:layout_height="wrap_content"
       android:layout_alignParentEnd="true"
       android:layout_marginLeft="250dp"
       android:layout_marginTop="500dp"
       android:layout_marginEnd="45dp"
       android:fontFamily="@font/poppinslight"
       android:text="Anda bisa export hasil scan ke dalam format pdf"
       android:textAlignment="textStart"
       android:textColor="@color/white"
       android:textSize="14sp" />


</RelativeLayout>