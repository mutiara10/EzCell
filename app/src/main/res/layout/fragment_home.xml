<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">


   <TextView
       android:id="@+id/ezcell"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:fontFamily="@font/mitrregular"
       android:text="EzCell"
       android:textAlignment="center"
       android:textColor="@color/white"
       android:textSize="65sp"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent" />


   <ImageView
       android:id="@+id/camera"
       android:layout_width="150dp"
       android:layout_height="100dp"
       android:layout_marginTop="20dp"
       android:layout_marginRight="30dp"
       android:src="@drawable/ic_camera"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/ezcell" />

   <TextView
       android:id="@+id/tv_camera"
       android:layout_width="157dp"
       android:layout_height="121dp"
       android:layout_alignParentEnd="true"
       android:layout_marginTop="30dp"
       android:layout_marginLeft="40dp"
       android:fontFamily="@font/poppinslight"
       android:text="Klik icon kamera untuk memulai analisis darah"
       android:textAlignment="textStart"
       android:textColor="@color/white"
       android:textSize="14sp"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/ezcell" />


   <ImageView
       android:id="@+id/blood"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_below="@+id/ezcell"
       android:layout_marginLeft="40dp"
       android:layout_marginTop="30dp"
       android:src="@drawable/darah"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/tv_camera" />

   <TextView
       android:id="@+id/tv_blood"
       android:layout_width="162dp"
       android:layout_height="wrap_content"
       android:layout_alignParentEnd="true"
       android:layout_marginTop="40dp"
       android:layout_marginRight="50dp"
       android:fontFamily="@font/poppinslight"
       android:text="Ambil gambar/unggah foto untuk mengetahui  erythrocytes, leukocytes, dan Platelets"
       android:textAlignment="textEnd"
       android:textColor="@color/white"
       android:textSize="14sp"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/camera" />

   <ImageView
       android:id="@+id/hasil_scan"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignParentEnd="true"
       android:layout_marginTop="50dp"
       android:layout_marginRight="50dp"
       android:src="@drawable/hasilscan"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/tv_blood" />


   <TextView
       android:id="@+id/tv_hasilscan"
       android:layout_width="125dp"
       android:layout_height="wrap_content"
       android:layout_alignParentStart="true"
       android:layout_marginTop="60dp"
       android:layout_marginLeft="40dp"
       android:fontFamily="@font/poppinslight"
       android:text="Tunggu sejenak untuk melihat hasil scan"
       android:textAlignment="textStart"
       android:textColor="@color/white"
       android:textSize="14sp"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/blood" />


</androidx.constraintlayout.widget.ConstraintLayout>